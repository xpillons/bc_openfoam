---
<%-

gpu_count=num_gpus.to_i
scheduler_args = ["-p", queue]
scheduler_args += ["-N", bc_num_slots.to_i]

if gpu_count > 0
  scheduler_args += ["--gpus=%d" % gpu_count]
end
scheduler_args += ["--exclusive"]
-%>

batch_connect:
  template: "basic"
script:
  job_name: "OpenFOAM Job"
  native:
  <%- scheduler_args.each do |arg| %>
    - "<%= arg %>"
  <%- end %>
